<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ltd.moore.ctravel.pay.mapper.TradeOrderMapper">

    <sql id="Column_List">
        EXPERIENCE_ID
        ,CUSTOMER_ID
        ,SERVICE_TIME_ID
        ,ORDER_ID
        ,THIRD_ORDER_ID
        ,FOURTH_ORDER_ID
        ,PAY_METHOD
        ,THIRD_ACCOUNT_ID
        ,TRADE_TYPE
        ,TRADE_STATUS
        ,MSG
        ,TRADE_TIME
        ,CREATE_TIME
        ,TRADE_AMOUNT
    </sql>

    <select id="getOrderInfoById" resultType="ltd.moore.ctravel.pay.model.OrderInfoVO" parameterType="String">
        select <include refid="Column_List" />
        from PUB_TRADE_ORDER where ORDER_ID = #{orderId}
    </select>



    <insert id="insert" parameterType="ltd.moore.ctravel.pay.model.OrderInfoVO">
        insert into PUB_TRADE_ORDER (<include refid="Column_List" />)
        values (
        #{experienceId}
        ,#{customerId}
        ,#{serviceTimeId}
        ,#{orderId}
        ,#{thirdOrderId}
        ,#{fourthOrderId}
        ,#{payMethod}
        ,#{thirdAccountId}
        ,#{tradeType}
        ,#{tradeStatus}
        ,#{msg}
        ,#{tradeTime}
        ,now()
        ,#{tradeAmount}
        )
    </insert>

    <update id="update" parameterType="ltd.moore.ctravel.pay.model.OrderInfoVO">
        update PUB_TRADE_ORDER
        <set>
            <if test="experienceId != null" >EXPERIENCE_ID = #{experienceId},</if>
            <if test="customerId != null" >CUSTOMER_ID = #{customerId},</if>
            <if test="serviceTimeId != null" >SERVICE_TIME_ID = #{serviceTimeId},</if>
            <if test="orderId != null" >ORDER_ID = #{orderId},</if>
            <if test="thirdOrderId != null" >THIRD_ORDER_ID = #{thirdOrderId},</if>
            <if test="fourthOrderId != null" >FOURTH_ORDER_ID = #{fourthOrderId},</if>
            <if test="payMethod != null and payMethod != 0"  >PAY_METHOD = #{payMethod},</if>
            <if test="thirdAccountId != null" >THIRD_ACCOUNT_ID = #{thirdAccountId},</if>
            <if test="tradeType != null and tradeType != 0" >TRADE_TYPE = #{tradeType},</if>
            <if test="tradeStatus != null and tradeStatus != 0" >TRADE_STATUS = #{tradeStatus},</if>
            <if test="msg != null" >MSG = #{msg},</if>
            <if test="tradeTime != null" >TRADE_TIME = #{tradeTime},</if>
            <if test="createTime != null">CREATE_TIME = #{createTime},</if>
            <if test="tradeAmount != null and tradeAmount != 0.0" >TRADE_AMOUNT = #{tradeAmount},</if>
        </set>
        where ORDER_ID = #{orderId}
    </update>

    <delete id="delete" parameterType="java.lang.String" >
        delete from PUB_TRADE_ORDER  where ORDER_ID = #{orderId}
    </delete>

    <select id="queryOrderInfoByCustomerId" resultType="ltd.moore.ctravel.pay.model.OrderInfoVO" parameterType="String">
        select <include refid="Column_List" />
        from PUB_TRADE_ORDER where CUSTOMER_ID = #{customerId}
    </select>

    <select id="count" resultType="int" parameterType="map">
        select COUNT(1)
        from PUB_TRADE_ORDER

        <if test="condition.customerId != null" > where CUSTOMER_ID = #{condition.customerId}</if>
    </select>
    <select id="list" resultType="ltd.moore.ctravel.pay.model.OrderInfoVO" parameterType="map">
        select <include refid="Column_List" />
        from PUB_TRADE_ORDER
        <if test="condition.customerId != null" > where CUSTOMER_ID = #{condition.customerId}</if>
        ORDER BY ORDER_ID DESC
    </select>
</mapper>