<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ltd.moore.ctravel.experience.mapper.DestinationMapper">
	<sql id="Column_List">
		DESTINATION_ID
		,DESTINATION
	</sql>
	<sql id="Where_Clause">
		<where>
			<if test="condition.destinationId != null" >AND DESTINATION_ID = #{destinationId}</if>
			<if test="condition.destination != null" >AND DESTINATION = #{destination}</if>
		</where>
	</sql>
	<select id="getById" resultType="ltd.moore.ctravel.experience.model.DestinationVO" parameterType="String">
		select <include refid="Column_List" />
		from PUB_DESTINATION where DESTINATION_ID = #{destinationId}
	</select>
	<select id="getByDestination" resultType="ltd.moore.ctravel.experience.model.DestinationVO" parameterType="String">
		select <include refid="Column_List" />
		from PUB_DESTINATION where DESTINATION = #{destination}
	</select>
	<select id="count" resultType="int" parameterType="map">
		select COUNT(1)
		from PUB_DESTINATION
		<include refid="Where_Clause" />
	</select>

	<select id="list" resultType="ltd.moore.ctravel.experience.model.DestinationVO" parameterType="map">
		select <include refid="Column_List" />
		from PUB_DESTINATION
		<include refid="Where_Clause" />
		ORDER BY UPDATE_TIME DESC
	</select>

	<insert id="insert" parameterType="ltd.moore.ctravel.experience.model.DestinationVO">
		insert into PUB_DESTINATION (<include refid="Column_List" />)
		values (
		#{destinationId}
		,#{destination}
		)
	</insert>

	<update id="update" parameterType="ltd.moore.ctravel.experience.model.DestinationVO">
		update PUB_DESTINATION
		<set>
			<if test="destinationId != null" >DESTINATION_ID = #{destinationId},</if>
			<if test="destination != null" >DESTINATION = #{destination},</if>
		</set>
		where DESTINATION_ID = #{destinationId}
	</update>

	<delete id="delete" parameterType="java.lang.String" >
		delete from PUB_DESTINATION  where DESTINATION_ID = #{destinationId}
	</delete>

	<delete id="deleteInBulk" parameterType="java.lang.String">
		delete from PUB_DESTINATION  where DESTINATION_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
</mapper>